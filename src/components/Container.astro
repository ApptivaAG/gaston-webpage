---
export interface Props {
  size?: 'small' | 'normal' | 'large'
}

const { size = 'normal' } = Astro.props
const maxWidth =
  size === 'large' ? '1240px' : size === 'normal' ? '960px' : '600px'
---

<div><slot /></div>

<style lang="scss" define:vars={{ maxWidth }}>
  div {
    margin: 0 auto;
    max-width: var(--maxWidth);
    padding: 1em;

    @media (min-width: 600px) {
      padding: 2em;
    }
  }
</style>
