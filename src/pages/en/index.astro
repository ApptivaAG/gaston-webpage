---
import { SEO } from 'astro-seo'
import MainLayout from '@layouts/Main.astro'
import Container from '@components/Container.astro'
import ButtonLink from '@components/ButtonLink.astro'

const description =
  "Gaston the digital menu allows guests to order and pay quickly and easily. It doesn't matter if the guests are in their establishment, on the road or at home. Gaston supports ordering in your business, take-away and delivery."
const title =
  'Gaston • Digital Menu • Serve more guests faster with fewer staff.'
---

<MainLayout>
  <!-- <SEO {title} {description} /> -->
  <Container>
    <h1>
      <b>Gaston</b>
      <br />
      <small> Digital menu </small>
    </h1>
    <p class="claim">Serve more guests faster with fewer staff.</p>
    <div class="animation">
      <img
        src="/assets/hero-gaston-vs-menu-en.svg"
        alt="Ordering with menu tedious, with Gaston app quick and easy"
        height="150"
        width="204"
      />
    </div>
    <ul>
      <li>Select, order, pay without staff.</li>
      <li>Serve all channels: In-house, Takeaway, Delivery.</li>
      <li>Available everywhere: On mobile, tablet and your website.</li>
      <li>With or without cash register, flexible to your needs.</li>
      <li>Your company, your style; also in the app.</li>
    </ul>

    <div class="button-list">
      <ButtonLink href="offers">Order now</ButtonLink>
      <ButtonLink href="qr-code-demo">Start demo</ButtonLink>
    </div>
  </Container>
  <section id="features">
    <Container>
      <div style="text-align:center">
        <h2>Roadmap</h2>
        <ButtonLink
          href="https://www.notion.so/gastonsolution/Roadmap-von-Gaston-6644875d1fba4fe58cacfbf15e1ace7e"
        >
          Roadmap
        </ButtonLink>
      </div>
    </Container>
  </section>
  <Container>
    <div class="button-list">
      <ButtonLink href="offers">Order now</ButtonLink>
      <ButtonLink href="qr-code-demo">Start demo</ButtonLink>
    </div>
  </Container>
</MainLayout>

<style lang="scss">
  h1 {
    text-align: center;
    font-size: 4em;
    margin: 0.5em 0;
    line-height: 0.6em;
    small {
      font-size: 40%;
      color: var(--text-color);
    }
  }
  .claim {
    font-style: italic;
    text-align: center;
    margin-bottom: 2em;
  }
  .animation {
    position: relative;
    margin: 0 max(-4em, -4vw) 0.2em;
    img {
      height: 100%;
      width: 100%;
    }
  }
  ul {
    font-size: 1em;
    margin-left: auto;
    margin-right: auto;
    max-width: fit-content;
    list-style: none;
    padding-left: 1em;
    li {
      padding-left: 1em;
      padding-bottom: 0.6em;
      &::before {
        content: '● ';
        position: absolute;
        font-size: 1.6em;
        transform: translate(-1em, -0.3em);
        color: var(--primary-color);
      }
    }
  }
  .button-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5em 1em;
    font-size: 1.3em;
    margin-top: 4em;
    margin-bottom: 1em;
  }
</style>
