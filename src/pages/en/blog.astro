---
import { SEO } from 'astro-seo'

import Main from '@layouts/Main.astro'
import Container from '@components/Container.astro'
import { generalTitle, metaData } from 'src/config'
import { BlogPostFrontMatter } from 'src/types'
import { takeSortedBlogPosts } from 'src/utils'

const { en } = metaData

const blogs = await Astro.glob<BlogPostFrontMatter>('./blog/**/*.md')
const sortedBlogs = takeSortedBlogPosts(blogs, 'en')

const description =
  'News from Gaston'
const title =
  `Blog: News from Gaston â€¢ ${generalTitle(en)}`
---

<head>
  <SEO {title} {description} />
</head>

<Main>
  <Container size="small">
    <h1>News from Gaston</h1>
    {sortedBlogs.map((post) => (
    <article>
      <a href={post.url + "/" }>
        <h2>{post.frontmatter.title}</h2>
      </a>
      <p>{post.frontmatter.description}</p>
    </article>
    ))}
  </Container>
</Main>

<style lang="scss">
  article {
    margin: 4em 0;
  }
</style>