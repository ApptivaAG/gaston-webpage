---
import Main from '@layouts/Main.astro'
import Container from '@components/Container.astro'
import type { BlogPostFrontMatter } from 'src/types'
import { takeSortedBlogPosts } from 'src/utils'

const blogs = await Astro.glob<BlogPostFrontMatter>('./blog/**/*.md')
const sortedBlogs = takeSortedBlogPosts(blogs, 'en')

---

<Main title="Blog: News from Gaston" description="Get the latest news from Gaston.">
  <Container size="small">
    <h1>News from Gaston</h1>
    {sortedBlogs.map((post) => (
    <article>
      <a href={post.url + "/" }>
        <h2>{post.frontmatter.title}</h2>
      </a>
      <p>{post.frontmatter.description}</p>
    </article>
    ))}
  </Container>
</Main>

<style lang="scss">
  article {
    margin: 4em 0;
  }
</style>