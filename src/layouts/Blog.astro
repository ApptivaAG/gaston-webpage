---
import { SEO } from 'astro-seo'

import Main from './Main.astro'
import Container from '@components/Container.astro'

const { content } = Astro.props
const { title, description, lang, date } = content
---

<head>
  <SEO title={`${title} • Blog • Gaston `} {description} />
</head>

<Main>
  <Container size="small">
    <h1>{title}</h1>
    <p class="publish-date">
      {lang === 'de' ? 'Veröffentlicht am' : 'Published on'}
      <b>{new Date(date).toLocaleDateString('de-CH')}</b>
    </p>
    <slot />
  </Container>
</Main>

<style lang="scss" is:global>
  li {
    margin-bottom: 1em;
  }
</style><style lang="scss">
  h1 {
    margin-bottom: 0;
    line-height: 1em;
  }
  .publish-date {
    font-size: 0.8em;
    margin-bottom: 3em;
  }
</style>
